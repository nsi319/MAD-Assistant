<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:scrollbars="none"
    tools:context=".SQLiteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            style="@style/component_name"
            android:text="Insert Student" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll Number:   "
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/roll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:textSize="15sp"
                android:hint="Roll Number"
                android:inputType="number"
                android:autofillHints="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name:       "
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:textSize="15sp"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:autofillHints="" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:foregroundGravity="center"
            app:cardBackgroundColor="@android:color/holo_green_dark"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_person_add_black_24dp"
                android:background="@android:color/holo_green_light"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@android:color/black"
                android:text="ADD STUDENT" />
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            style="@style/component_name"
            android:text="Update Student" />

            <TextView
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:foregroundGravity="right"
                android:gravity="right|end"
                android:layout_marginTop="10dp"
                android:text="RESET"
                android:textColor="@android:color/holo_green_light"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rollLayout"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll Number:   "
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/roll_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:textSize="15sp"
                android:hint="Roll Number"
                android:inputType="number"
                android:autofillHints="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameLayout"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name:       "
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/name_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:textSize="15sp"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:autofillHints="" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/updateCard"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:foregroundGravity="center"
            app:cardBackgroundColor="@android:color/holo_orange_light"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_person_add_black_24dp"
                android:background="@android:color/holo_green_light"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@android:color/black"
                android:text="UPDATE STUDENT" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/findCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:foregroundGravity="center"
            app:cardBackgroundColor="@android:color/holo_orange_light"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_find_in_page_black_24dp"
                android:background="@android:color/holo_green_light"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@android:color/black"
                android:text="FIND STUDENT" />
        </androidx.cardview.widget.CardView>


        <TextView
            style="@style/component_name"
            android:text="View All Students" />

        <androidx.cardview.widget.CardView
            android:id="@+id/getAllCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:foregroundGravity="center"
            app:cardBackgroundColor="@android:color/holo_blue_dark"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_group_black_24dp"
                android:background="@android:color/holo_green_light"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@android:color/black"
                android:text="GET ALL STUDENTS" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/studentList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="15dp"
            android:textColor="@android:color/black"
            />

    </LinearLayout>
</ScrollView>